<%= render 'shared/page_title', title: "Atricle Tags" %>

<div align="center">
  <%= will_paginate %>
  <% @tags.each do |taag| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="chef-title"><%= link_to taag.name, tag_path(taag) %></li>
          <li><small><%= pluralize(taag.atricles.count, "article") if taag.articles %></small></li>
          <% if logged_in? && current_player.admin? %>
            <li><%= link_to "Edit this tag", edit_tag_path(taag) %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>