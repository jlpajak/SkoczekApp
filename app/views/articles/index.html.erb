<%= render 'shared/page_title', title: "Articles" %>

<% @articles.each do |article| %>
  <div class="row">
    <div class="col-md-2">
      <section class="player_info center">
        <%= gravatar_for(article.player, size: 120) %>
      </section>
    </div>
    <div class="col-md-8 well">
      <h4><%= link_to article.name, article.path(article) %></h4>
      <p><%= truncate(article.description, length: 150) %></p>
      <p>
        <span class="quiet"><small>Created <%= time_ago_in_words(article.created_at) %> ago</small></span>
      </p> 
    </div>
  </div>
<% end %>